<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <title>CCi INFO Page</title>
</head>

<body>

  <div class="jumbotron mt-10">
    <% cci.forEach(function(cci){ %>
      <% let strength = 0;%>
      <% let cciId=cci.cci_id; %>
     
      <% child.forEach(function(child){ %>
        <% let childId = child.cci_id; %>
        <% let value =childId.localeCompare(cciId)%>
        <% if( value == 0){strength++;} ;%>
       
      <% }); %>
      
    <div class="container my-8">
      <div class="card ">

        <h2 class="card-header text-center text-white bg-info mb-3"><%= cci.cci_name %></h2>
        <div class="card-body">
         

          <h1>
            <span class="badge badge-dark">Head Name <br><span class="badge badge-light ml-10 my-3">
              <%= cci.cci_HeadName.fname %>   <%= cci.cci_HeadName.lname %></span></span>
          </h1>

          <p class="card-text"><h4>Address: <%=cci.cci_address.address%>, <%=cci.cci_address.district%> </h4></p>

          <h1>
            <span class="badge badge-success">Strength <span class="badge badge-secondary ml-10 "><%= strength%></span></span>
          </h1>

          <h1><span class="badge badge-primary">Orphan <span class="badge badge-secondary">New</span></span></h1>
          <h1><span class="badge badge-primary">Abandoned <span class="badge badge-secondary">New</span></span></h1>
          <h1><span class="badge badge-primary">Surrendered <span class="badge badge-secondary">New</span></span></h1>
          <button type="button" class="btn btn-primary btn-lg" >
            <a href="/attendance/<%=cci.cci_id%>/<%=cci.cci_name%>">Large button</a>
          </button>
        </div>
      </div>
    </div>
    <br>

   
    <% strength = 0; %>
    <% }); %>

  </div>





  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>
  <!-- <script src="cciInfo.js"></script> -->
</body>

</html>